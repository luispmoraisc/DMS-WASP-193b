{
  "packageManager": "yarn@1.22.22",
  "name": "dms-wasp-193b",
  "version": "1.0.0",
  "description": "Frontend client of Document Management System with AI tools",
  "main": "index.js",
  "repository": "https://github.com/luispmoraisc/DMS-WASP-193b",
  "author": "Luis Cardoso <lpmcdigital@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "yarn exec biome lint --write",
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "yarn cp && turbo run dev",
    "commit": "git cz",
    "release": "semantic-release",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "generate": "turbo run generate",
    "start": "turbo run dev",
    "cp": "cp .env ./packages/infra/.env && cp .env ./apps/api/.env && cp .env ./packages/shared/.env",
    "clear:envs": "rm ./packages/infra/.env && rm ./apps/api/.env && rm ./packages/shared/.env"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}